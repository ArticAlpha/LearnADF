{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "LearnADF0"
		},
		"kv_AzureKeyVault1_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://Learnadfkv.vault.azure.net/"
		},
		"ls_AzureBlobStorage_properties_typeProperties_connectionString_secretName": {
			"type": "string",
			"defaultValue": "blobstoragesecret"
		},
		"ls_AzureSqlDatabase_properties_typeProperties_connectionString_secretName": {
			"type": "string",
			"defaultValue": "AzureSqlDataBase"
		},
		"ls_AzureSqlDatabase_destination_properties_typeProperties_connectionString_secretName": {
			"type": "string",
			"defaultValue": "AzureSqlDatabaseDestination"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "LearnADF0_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"kv_AzureKeyVault1_properties_typeProperties_baseUrl": {
						"value": "[parameters('kv_AzureKeyVault1_properties_typeProperties_baseUrl')]"
					},
					"ls_AzureBlobStorage_properties_typeProperties_connectionString_secretName": {
						"value": "[parameters('ls_AzureBlobStorage_properties_typeProperties_connectionString_secretName')]"
					},
					"ls_AzureSqlDatabase_properties_typeProperties_connectionString_secretName": {
						"value": "[parameters('ls_AzureSqlDatabase_properties_typeProperties_connectionString_secretName')]"
					},
					"ls_AzureSqlDatabase_destination_properties_typeProperties_connectionString_secretName": {
						"value": "[parameters('ls_AzureSqlDatabase_destination_properties_typeProperties_connectionString_secretName')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "LearnADF0_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'LearnADF0_ArmTemplate_0')]"
			]
		}
	]
}